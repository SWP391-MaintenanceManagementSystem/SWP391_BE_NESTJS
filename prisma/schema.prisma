generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ================= ENUMS =================
 */

enum AccountRole {
  ADMIN
  STAFF
  TECHNICIAN
  CUSTOMER
  PREMIUM
}

enum AccountStatus {
  VERIFIED
  NOT_VERIFY
  BANNED
  DISABLED
}

enum AuthProvider {
  EMAIL
  GOOGLE
}

enum BookingStatus {
  PENDING
  ASSIGNED
  CHECKED_IN
  CHECKED_OUT
  COMPLETED
  CANCELLED
  IN_PROGRESS
}

enum ReferenceType {
  BOOKING
  MEMBERSHIP
}

enum Method {
  CASH
  CARD
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}

enum VehicleStatus {
  ACTIVE
  INACTIVE
}

enum CenterStatus {
  OPEN
  CLOSED
}

enum ServiceStatus {
  ACTIVE
  INACTIVE
}

enum PackageStatus {
  ACTIVE
  INACTIVE
}

enum ShiftStatus {
  ACTIVE
  INACTIVE
}

enum PeriodType {
  DAY
  MONTH
  YEAR
}

enum MembershipStatus {
  ACTIVE
  INACTIVE
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  EXPIRED
}

enum BookingDetailStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum PartStatus {
  AVAILABLE
  OUT_OF_STOCK
  DISCONTINUED
}

enum NotificationType {
  SYSTEM
  BOOKING
  PAYMENT
  SHIFT
  MEMBERSHIP
}

enum ChatStatus {
  OPEN
  CLOSED
  PENDING
}

/**
 * ================= MODELS =================
 */

model Account {
  id                 String         @id @default(uuid()) @map("id")
  email              String         @unique
  password           String?
  phone              String?
  role               AccountRole    @default(CUSTOMER)
  status             AccountStatus  @default(NOT_VERIFY)
  avatar             String?
  avatarPublicId     String?        @map("avatar_public_id")
  provider           AuthProvider[] @default([EMAIL])
  providerId         Json?          @map("provider_id")
  createdAt          DateTime       @default(now()) @map("created_at") @db.Timestamptz
  updatedAt          DateTime       @updatedAt @map("updated_at") @db.Timestamptz
  customer           Customer?
  employee           Employee?
  // admin          Admin?
  tokens             Token[]
  notifications      Notification[]
  messages           Message[]      @relation("SentMessages")
  receivedMsgs       Message[]      @relation("ReceivedMessages")
  conversations      Conversation[] @relation("CustomerConversations")
  staffConversations Conversation[] @relation("StaffConversations")

  @@map("accounts")
}

model Customer {
  accountId String   @id @map("account_id")
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  address   String?
  isPremium Boolean  @default(false) @map("is_premium")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

  account       Account        @relation(fields: [accountId], references: [id], onDelete: Cascade)
  bookings      Booking[]
  vehicles      Vehicle[]
  transactions  Transaction[]
  subscriptions Subscription[]

  @@map("customers")
}

model Employee {
  accountId String   @id @map("account_id")
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

  account            Account               @relation(fields: [accountId], references: [id], onDelete: Cascade)
  workSchedules      WorkSchedule[]
  workCenters        WorkCenter[]
  certificates       EmployeeCertificate[]
  bookingAssignments BookingAssignment[]   @relation("AssignedEmployee")
  assignedByBookings BookingAssignment[]   @relation("AssignerEmployee")
  VehicleHandover    VehicleHandover[]

  @@map("employees")
}

