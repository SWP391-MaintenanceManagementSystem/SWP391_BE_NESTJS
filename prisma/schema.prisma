generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ================= ENUMS =================
 */

enum AccountRole {
  ADMIN
  STAFF
  TECHNICIAN
  CUSTOMER
  PREMIUM
}

enum AccountStatus {
  VERIFIED
  NOT_VERIFY
  BANNED
  DISABLED
}

enum AuthProvider {
  EMAIL
  GOOGLE
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CHECKED_IN
  COMPLETED
  CANCELLED
  IN_PROCESS
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}

enum VehicleStatus {
  ACTIVE
  INACTIVE
}

/**
 * ================= MODELS =================
 */

model Account {
  id             String         @id @default(uuid()) @map("id")
  email          String         @unique
  password       String?
  phone          String?
  role           AccountRole    @default(CUSTOMER)
  status         AccountStatus  @default(NOT_VERIFY)
  avatar         String?
  avatarPublicId String?        @map("avatar_public_id")
  provider       AuthProvider[] @default([EMAIL])
  providerId     Json?          @map("provider_id")
  createdAt      DateTime       @default(now()) @map("created_at")
  updatedAt      DateTime       @updatedAt @map("updated_at")
  customer       Customer?
  employee       Employee?
  admin          Admin?
  tokens         Token[]

  @@map("accounts")
}

model Customer {
  accountId String   @id @map("account_id")
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  address   String?
  isPremium Boolean  @default(false) @map("is_premium")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  account       Account        @relation(fields: [accountId], references: [id], onDelete: Cascade)
  bookings      Booking[]
  vehicles      Vehicle[]
  transactions  Transaction[]
  subscriptions Subscription[]

  @@map("customers")
}

model Employee {
  accountId String   @id @map("account_id")
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  account            Account               @relation(fields: [accountId], references: [id], onDelete: Cascade)
  workSchedules      WorkSchedule[]
  workCenters        WorkCenter[]
  bookingAssignments BookingAssignment[]
  certificates       EmployeeCertificate[]

  @@map("employees")
}

model Admin {
  accountId String   @id @map("account_id")
  fullName  String   @map("full_name")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("admins")
}

model Vehicle {
  id           String        @id @default(uuid())
  vin          String        @unique
  customerId   String        @map("customer_id")
  licensePlate String        @unique @map("license_plate")
  deletedAt    DateTime?
  lastService  DateTime?     @map("last_service")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  status       VehicleStatus @default(ACTIVE)
  customer     Customer      @relation(fields: [customerId], references: [accountId], onDelete: Cascade)
  modelId      Int           @map("model_id")
  vehicleModel VehicleModel  @relation(fields: [modelId], references: [id])
  bookings     Booking[]

  @@map("vehicles")
}

model VehicleModel {
  id             Int       @id @default(autoincrement())
  brandId        Int       @map("brand_id")
  name           String
  productionYear Int       @map("production_year")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  brand          Brand     @relation(fields: [brandId], references: [id])
  vehicles       Vehicle[]

  @@map("vehicle_models")
}

model Brand {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  vehicleModels VehicleModel[]

  @@map("brands")
}

model Booking {
  id          String        @id @default(uuid())
  customerId  String        @map("customer_id")
  vehicleId   String        @map("vehicle_id")
  centerId    String        @map("center_id")
  totalCost   Float         @map("total_cost")
  status      BookingStatus @default(PENDING)
  note        String?
  bookingDate DateTime      @map("booking_date")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  customer           Customer            @relation(fields: [customerId], references: [accountId], onDelete: Cascade)
  vehicle            Vehicle             @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  serviceCenter      ServiceCenter       @relation(fields: [centerId], references: [id], onDelete: Cascade)
  bookingDetails     BookingDetail[]
  bookingAssignments BookingAssignment[]
  transactions       Transaction[]

  @@index([customerId])
  @@index([status])
  @@index([bookingDate])
  @@map("bookings")
}

model BookingDetail {
  id        String   @id @default(uuid())
  bookingId String   @map("booking_id")
  serviceId String?  @map("service_id")
  packageId String?  @map("package_id")
  quantity  Int
  unitPrice Float    @map("unit_price")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  booking Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  service Service? @relation(fields: [serviceId], references: [id])
  package Package? @relation(fields: [packageId], references: [id])

  @@map("booking_details")
}

model BookingAssignment {
  id         String   @id @default(uuid())
  bookingId  String   @map("booking_id")
  employeeId String   @map("employee_id")
  assignedAt DateTime @default(now()) @map("assigned_at")

  booking  Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  employee Employee @relation(fields: [employeeId], references: [accountId], onDelete: Cascade)

  @@map("booking_assignments")
}

model Service {
  id             String          @id @default(uuid())
  name           String
  description    String?
  price          Float
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")
  bookingDetails BookingDetail[]
  packageDetails PackageDetail[]
  ServicePart    ServicePart[]

  @@map("services")
}

model Package {
  id        String   @id @default(uuid())
  name      String
  price     Float
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  packageDetails PackageDetail[]
  bookingDetails BookingDetail[]

  @@map("packages")
}

model PackageDetail {
  packageId String
  serviceId String
  quantity  Int     @default(1)
  package   Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@id([packageId, serviceId])
  @@map("package_details")
}

model Part {
  id          String        @id @default(uuid())
  catergoryId String        @map("category_id")
  description String?
  price       Float
  name        String
  stock       Int
  minStock    Int           @map("min_stock")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  category    Category      @relation(fields: [catergoryId], references: [id], onDelete: Cascade)
  ServicePart ServicePart[]

  @@map("parts")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  parts     Part[]

  @@map("categories")
}

model ServicePart {
  id        String   @id @default(uuid())
  serviceId String   @map("service_id")
  partId    String   @map("part_id")
  quantity  Int
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  part      Part     @relation(fields: [partId], references: [id], onDelete: Cascade)

  @@map("service_parts")
}

model ServiceCenter {
  id        String   @id @default(uuid())
  name      String
  address   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  bookings    Booking[]
  workCenters WorkCenter[]

  @@map("service_centers")
}

model Shift {
  id          String    @id @default(uuid())
  name        String
  startTime   DateTime  @map("start_time")
  endTime     DateTime  @map("end_time")
  startDate   DateTime? @map("start_date")
  endDate     DateTime? @map("end_date")
  maximumSlot Int?      @map("maximum_slot")
  repeatDays  String?   @map("repeat_days")
  centerId    String    @map("center_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  workSchedules WorkSchedule[]

  @@map("shifts")
}

model WorkSchedule {
  id         String   @id @default(uuid())
  employeeId String   @map("employee_id")
  shiftId    String   @map("shift_id")
  date       DateTime
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  employee Employee @relation(fields: [employeeId], references: [accountId], onDelete: Cascade)
  shift    Shift    @relation(fields: [shiftId], references: [id], onDelete: Cascade)

  @@map("work_schedules")
}

model WorkCenter {
  id         String   @id @default(uuid())
  employeeId String   @map("employee_id")
  centerId   String   @map("center_id")
  assignedAt DateTime @default(now()) @map("assigned_at")

  employee      Employee      @relation(fields: [employeeId], references: [accountId], onDelete: Cascade)
  serviceCenter ServiceCenter @relation(fields: [centerId], references: [id], onDelete: Cascade)

  @@map("work_centers")
}

model EmployeeCertificate {
  id         String   @id @default(uuid())
  employeeId String   @map("employee_id")
  name       String
  issuedAt   DateTime @map("issued_at")
  expiresAt  DateTime @map("expires_at")

  employee Employee @relation(fields: [employeeId], references: [accountId], onDelete: Cascade)

  @@map("employee_certificates")
}

model Transaction {
  id         String            @id @default(uuid())
  customerId String            @map("customer_id")
  bookingId  String            @map("booking_id")
  amount     Float
  status     TransactionStatus @default(PENDING)
  createdAt  DateTime          @default(now()) @map("created_at")

  customer Customer @relation(fields: [customerId], references: [accountId], onDelete: Cascade)
  booking  Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

model Subscription {
  id         String   @id @default(uuid())
  customerId String   @map("customer_id")
  type       String
  startDate  DateTime @map("start_date")
  endDate    DateTime @map("end_date")

  customer Customer @relation(fields: [customerId], references: [accountId], onDelete: Cascade)

  @@map("subscriptions")
}

model Token {
  id           String   @id @default(uuid())
  accountId    String   @map("account_id")
  refreshToken String
  expiresAt    DateTime @map("expires_at")

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("tokens")
}
