model Vehicle {
  id           String        @id @default(uuid())
  vin          String        @unique
  customerId   String        @map("customer_id")
  licensePlate String        @unique @map("license_plate")
  deletedAt    DateTime?     @map("deleted_at") @db.Timestamptz
  lastService  DateTime?     @map("last_service") @db.Timestamptz
  createdAt    DateTime      @default(now()) @map("created_at") @db.Timestamptz
  updatedAt    DateTime      @updatedAt @map("updated_at") @db.Timestamptz
  status       VehicleStatus @default(ACTIVE)
  customer     Customer      @relation(fields: [customerId], references: [accountId], onDelete: Cascade)
  modelId      Int           @map("model_id")
  vehicleModel VehicleModel  @relation(fields: [modelId], references: [id])
  bookings     Booking[]

  @@map("vehicles")
}

model VehicleModel {
  id             Int       @id @default(autoincrement())
  brandId        Int       @map("brand_id")
  name           String
  productionYear Int       @map("production_year")
  createdAt      DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt      DateTime  @updatedAt @map("updated_at") @db.Timestamptz
  brand          Brand     @relation(fields: [brandId], references: [id])
  vehicles       Vehicle[]

  @@map("vehicle_models")
}

model Brand {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  createdAt     DateTime       @default(now()) @map("created_at") @db.Timestamptz
  updatedAt     DateTime       @updatedAt @map("updated_at") @db.Timestamptz
  vehicleModels VehicleModel[]

  @@map("brands")
}

model Booking {
  id          String        @id @default(uuid())
  customerId  String        @map("customer_id")
  vehicleId   String        @map("vehicle_id")
  centerId    String        @map("center_id")
  shiftId     String        @map("shift_id")
  totalCost   Float         @map("total_cost")
  status      BookingStatus @default(PENDING)
  note        String?
  bookingDate DateTime      @map("booking_date") @db.Timestamptz
  handoverId  String?       @unique @map("handover_id")
  rating      Int?
  feedback    String?
  reminded    Json?         @default("{}") @map("reminded")
  createdAt   DateTime      @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime      @updatedAt @map("updated_at") @db.Timestamptz

  customer           Customer            @relation(fields: [customerId], references: [accountId], onDelete: Cascade)
  vehicle            Vehicle             @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  serviceCenter      ServiceCenter       @relation(fields: [centerId], references: [id], onDelete: Cascade)
  shift              Shift               @relation(fields: [shiftId], references: [id], onDelete: Cascade)
  handover           VehicleHandover?
  bookingDetails     BookingDetail[]
  bookingAssignments BookingAssignment[]

  @@index([customerId])
  @@index([status])
  @@index([bookingDate])
  @@map("bookings")
}

model BookingDetail {
  id        String              @id @default(uuid())
  bookingId String              @map("booking_id")
  serviceId String?             @map("service_id")
  packageId String?             @map("package_id")
  quantity  Int
  status    BookingDetailStatus @default(PENDING)
  unitPrice Float               @map("unit_price")
  createdAt DateTime            @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime            @updatedAt @map("updated_at") @db.Timestamptz

  booking Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  service Service? @relation(fields: [serviceId], references: [id])
  package Package? @relation(fields: [packageId], references: [id])

  @@map("booking_details")
}

model BookingAssignment {
  id         String @id @default(uuid())
  bookingId  String @map("booking_id")
  employeeId String @map("employee_id")
  assignedBy String @map("assigned_by")

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

  booking  Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  employee Employee @relation("AssignedEmployee", fields: [employeeId], references: [accountId], onDelete: Cascade)
  assigner Employee @relation("AssignerEmployee", fields: [assignedBy], references: [accountId])

  @@unique([bookingId, employeeId])
  @@map("booking_assignments")
}

model Service {
  id             String          @id @default(uuid())
  name           String
  description    String?
  price          Float
  status         ServiceStatus   @default(ACTIVE)
  createdAt      DateTime        @default(now()) @map("created_at") @db.Timestamptz
  updatedAt      DateTime        @updatedAt @map("updated_at") @db.Timestamptz
  bookingDetails BookingDetail[]
  packageDetails PackageDetail[]
  ServicePart    ServicePart[]

  @@map("services")
}

model Package {
  id           String        @id @default(uuid())
  name         String
  price        Float
  discountRate Float         @default(0) @map("discount_rate")
  description  String?
  status       PackageStatus @default(ACTIVE)
  createdAt    DateTime      @default(now()) @map("created_at") @db.Timestamptz
  updatedAt    DateTime      @updatedAt @map("updated_at") @db.Timestamptz

  packageDetails PackageDetail[]
  bookingDetails BookingDetail[]

  @@map("packages")
}

model PackageDetail {
  packageId String
  serviceId String
  quantity  Int     @default(1)
  package   Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@id([packageId, serviceId])
  @@map("package_details")
}

model Part {
  id          String        @id @default(uuid())
  categoryId  String        @map("category_id")
  description String?
  price       Float
  name        String
  stock       Int
  minStock    Int           @map("min_stock")
  status      PartStatus    @default(AVAILABLE)
  createdAt   DateTime      @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime      @updatedAt @map("updated_at") @db.Timestamptz
  category    Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  ServicePart ServicePart[]

  @@map("parts")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz
  parts     Part[]

  @@map("categories")
}

model ServicePart {
  id        String   @id @default(uuid())
  serviceId String   @map("service_id")
  partId    String   @map("part_id")
  quantity  Int
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  part      Part     @relation(fields: [partId], references: [id], onDelete: Cascade)

  @@map("service_parts")
}

model ServiceCenter {
  id        String       @id @default(uuid())
  name      String
  address   String
  status    CenterStatus @default(OPEN)
  createdAt DateTime     @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime     @updatedAt @map("updated_at") @db.Timestamptz

  bookings    Booking[]
  workCenters WorkCenter[]
  shifts      Shift[]

  @@map("service_centers")
}

model Shift {
  id          String      @id @default(uuid())
  name        String
  startTime   DateTime    @map("start_time") @db.Time
  endTime     DateTime    @map("end_time") @db.Time
  maximumSlot Int         @map("maximum_slot")
  status      ShiftStatus @default(ACTIVE)
  centerId    String      @map("center_id")
  createdAt   DateTime    @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime    @updatedAt @map("updated_at") @db.Timestamptz

  serviceCenter ServiceCenter  @relation(fields: [centerId], references: [id], onDelete: Cascade)
  workSchedules WorkSchedule[]
  Booking       Booking[]

  @@map("shifts")
}

model WorkSchedule {
  id         String   @id @default(uuid())
  employeeId String   @map("employee_id")
  shiftId    String   @map("shift_id")
  date       DateTime @db.Timestamptz
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz

  employee Employee @relation(fields: [employeeId], references: [accountId], onDelete: Cascade)
  shift    Shift    @relation(fields: [shiftId], references: [id], onDelete: Cascade)

  @@map("work_schedules")
}

model WorkCenter {
  id            String        @id @default(uuid())
  employeeId    String        @map("employee_id")
  centerId      String        @map("center_id")
  startDate     DateTime      @map("start_date") @db.Timestamptz
  endDate       DateTime?     @map("end_date") @db.Timestamptz
  employee      Employee      @relation(fields: [employeeId], references: [accountId], onDelete: Cascade)
  serviceCenter ServiceCenter @relation(fields: [centerId], references: [id], onDelete: Cascade)

  @@map("work_centers")
}

model EmployeeCertificate {
  id         String   @id @default(uuid())
  employeeId String   @map("employee_id")
  name       String
  issuedAt   DateTime @map("issued_at") @db.Timestamptz
  expiresAt  DateTime @map("expires_at") @db.Timestamptz

  employee Employee @relation(fields: [employeeId], references: [accountId], onDelete: Cascade)

  @@map("employee_certificates")
}

model Transaction {
  id            String            @id @default(uuid())
  customerId    String            @map("customer_id")
  referenceId   String?           @map("reference_id")
  referenceType ReferenceType?    @map("reference_type")
  sessionId     String?           @unique @map("session_id")
  amount        Float
  status        TransactionStatus @default(PENDING)
  method        Method
  createdAt     DateTime          @default(now()) @map("created_at") @db.Timestamptz
  updatedAt     DateTime          @updatedAt @map("updated_at") @db.Timestamptz
  customer      Customer          @relation(fields: [customerId], references: [accountId], onDelete: Cascade)

  @@map("transactions")
}

model Subscription {
  id             String             @id @default(uuid())
  customerId     String             @map("customer_id")
  membershipId   String             @map("membership_id")
  status         SubscriptionStatus @default(ACTIVE)
  lastFreeUsedAt DateTime?          @map("last_free_used_at") @db.Timestamptz
  startDate      DateTime           @map("start_date") @db.Timestamptz
  endDate        DateTime           @map("end_date") @db.Timestamptz

  customer   Customer   @relation(fields: [customerId], references: [accountId], onDelete: Cascade)
  membership Membership @relation(fields: [membershipId], references: [id])

  @@map("subscriptions")
}

model Membership {
  id          String           @id @default(uuid())
  name        String
  price       Float
  duration    Int
  periodType  PeriodType
  status      MembershipStatus @default(ACTIVE)
  description String?
  createdAt   DateTime         @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime         @updatedAt @map("updated_at") @db.Timestamptz

  subscriptions Subscription[]

  @@map("memberships")
}

model Token {
  id           String   @id @default(uuid())
  accountId    String   @map("account_id")
  refreshToken String
  expiresAt    DateTime @map("expires_at") @db.Timestamptz

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("tokens")
}

model Notification {
  id                String           @id @default(uuid())
  accountId         String           @map("account_id")
  content           String
  title             String
  notification_type NotificationType @map("notification_type")
  sent_at           DateTime         @default(now()) @db.Timestamptz
  is_read           Boolean          @default(false)
  created_at        DateTime         @default(now()) @db.Timestamptz
  read_at           DateTime?        @db.Timestamptz

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([accountId, created_at])
  @@map("notifications")
}

model VehicleHandover {
  id          String   @id @default(uuid())
  bookingId   String   @unique @map("booking_id")
  odometer    Int
  note        String?
  description String[]
  staffId     String   @map("staff_id")
  date        DateTime @db.Timestamptz
  imageUrls   String[] @map("image_urls")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz

  booking Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  staff   Employee @relation(fields: [staffId], references: [accountId], onDelete: Cascade)

  @@map("vehicle_handovers")
}

model Message {
  id             String   @id @default(uuid())
  conversationId String   @map("conversation_id")
  senderId       String   @map("sender_id")
  receiverId     String?  @map("receiver_id")
  content        String
  sentAt         DateTime @default(now()) @map("sent_at") @db.Timestamptz

  sender       Account      @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver     Account?     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  conversation Conversation @relation(fields: [conversationId], references: [id])

  @@map("messages")
}

model Conversation {
  id         String     @id @default(uuid())
  customerId String     @map("customer_id")
  staffId    String?    @map("staff_id")
  status     ChatStatus @default(OPEN)
  createdAt  DateTime   @default(now()) @map("created_at") @db.Timestamptz
  updatedAt  DateTime   @updatedAt @map("updated_at") @db.Timestamptz

  customer Account   @relation("CustomerConversations", fields: [customerId], references: [id], onDelete: Cascade)
  staff    Account?  @relation("StaffConversations", fields: [staffId], references: [id], onDelete: SetNull)
  messages Message[]

  @@map("conversations")
}
